<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bishal.logmonitorapp.ui.MainDashboardController">

    <left>
        <VBox spacing="12" style="-fx-padding: 20;">
            <Button text="📄 Log Viewer" onAction="#openLogViewer" prefWidth="160"/>
            <Button text="🧩 Monitor Control" onAction="#openMonitorControl" prefWidth="160"/>
            <Button text="🚨 Alerts" onAction="#openAlerts" prefWidth="160"/>
            <Button text="🧪 Synthetic Writer" onAction="#openSyntheticWriter" prefWidth="160"/>
            <Button text="🧹 Clear Memory" onAction="#openSystemActions" prefWidth="160"/>
            <Button text="📊 Real-Time Stats" onAction="#openStats" prefWidth="160"/>
            <Button text="🧵 Thread Status" onAction="#openThreadStatus" prefWidth="160"/>
            <Button text="📈 Log Insights" onAction="#openLogInsights" prefWidth="160"/>
            <Button text="ℹ️ About" onAction="#openAboutPage" prefWidth="160"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane" style="-fx-padding: 20;"/>
    </center>
</BorderPane>